{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug DataLang (WSL)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/src/datalang",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/src",
            "environment": [],
            "externalConsole": false,

            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",

            "setupCommands": [
                {
                    "description": "Enable pretty printing",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],

            "preLaunchTask": "build"
        }
    ]
}
